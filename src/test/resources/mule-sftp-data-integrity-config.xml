<mule xmlns="http://www.mulesource.org/schema/mule/core/2.2"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:spring="http://www.springframework.org/schema/beans"
      xmlns:sftp="http://www.mulesource.org/schema/mule/sftp/2.2"
      xmlns:vm="http://www.mulesource.org/schema/mule/vm/2.2"
      xsi:schemaLocation="
               http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
               http://www.mulesource.org/schema/mule/core/2.2 http://www.mulesource.org/schema/mule/core/2.2/mule.xsd
               http://www.mulesource.org/schema/mule/sftp/2.2 http://www.mulesource.org/schema/mule/sftp/2.2/mule-sftp.xsd
               http://www.mulesource.org/schema/mule/vm/2.2 http://www.mulesource.org/schema/mule/vm/2.2/mule-vm.xsd">

    <sftp:connector name="sftpCustomConnector" pollingFrequency="500" autoDelete="true" outputPattern="#[ORIGINALNAME]"
                    identityFile="src/test/resources/certs/id_rsa-muletest1" passphrase="muletest1"/>

    <sftp:connector name="sftpTempDirConnector" pollingFrequency="500" autoDelete="true" outputPattern="#[ORIGINALNAME]"
                    tempDir="uploading"
                    identityFile="src/test/resources/certs/id_rsa-muletest1" passphrase="muletest1"/>

    <sftp:connector name="sftpWrongPassphraseConnector" pollingFrequency="500" autoDelete="true" outputPattern="#[ORIGINALNAME]"
                    identityFile="src/test/resources/certs/id_rsa-muletest1" passphrase="THIS-IS-NOT-CORRECT"/>

    <model name="main">
        <service name="testComponent">
            <inbound>
                <sftp:inbound-endpoint address="sftp://muletest1@sftpserver/dataintegrity-test-inbound"
                                       connector-ref="sftpCustomConnector"
                                       name="inboundEndpoint"/>
            </inbound>

            <outbound>
                <pass-through-router>
                    <sftp:outbound-endpoint address="sftp://muletest1@sftpserver/dataintegrity-test-outbound"
                                            connector-ref="sftpCustomConnector"
                                            name="outboundEndpoint">
                    </sftp:outbound-endpoint>
                </pass-through-router>
            </outbound>

        </service>
    </model>

    <model name="mainWithTempDir">
        <service name="testComponentTempDir">
            <inbound>
                <sftp:inbound-endpoint address="sftp://muletest1@sftpserver/dataintegrity-tempdir-test-inbound"
                                       connector-ref="sftpTempDirConnector"
                                       name="inboundEndpointTempDir"/>
            </inbound>

            <outbound>
                <pass-through-router>
                    <sftp:outbound-endpoint address="sftp://muletest1@sftpserver/dataintegrity-tempdir-test-outbound"
                                            connector-ref="sftpTempDirConnector"
                                            name="outboundEndpointTempDir">
                    </sftp:outbound-endpoint>
                </pass-through-router>
            </outbound>

        </service>
    </model>

     <model name="mainWithDirMissing">
        <service name="testComponentDirMissing">
            <inbound>
                <sftp:inbound-endpoint address="sftp://muletest1@sftpserver/dataintegrity-dirmissing-test-inbound"
                                       connector-ref="sftpCustomConnector"
                                       name="inboundEndpointDirMissing"/>
            </inbound>

            <outbound>
                <pass-through-router>
                    <sftp:outbound-endpoint address="sftp://muletest1@sftpserver/DIRECTORY-MISSING"
                                            connector-ref="sftpCustomConnector"
                                            name="outboundEndpointDirMissing">
                    </sftp:outbound-endpoint>
                </pass-through-router>
            </outbound>

        </service>
    </model>

    <model name="mainWrongPasspraseOnOutbound">
        <service name="testComponentWrongPasspraseOnOutbound">
            <inbound>
                <sftp:inbound-endpoint address="sftp://muletest1@sftpserver/dataintegrity-wrongpassprase-test-inbound"
                                       connector-ref="sftpCustomConnector"
                                       name="inboundEndpointWrongPasspraseOnOutbound"/>
            </inbound>

            <outbound>
                <pass-through-router>
                    <sftp:outbound-endpoint address="sftp://muletest1@sftpserver/DIRECTORY-MISSING"
                                            connector-ref="sftpWrongPassphraseConnector"
                                            name="outboundEndpointWrongPasspraseOnOutbound">
                    </sftp:outbound-endpoint>
                </pass-through-router>
            </outbound>

        </service>
    </model>
</mule>



