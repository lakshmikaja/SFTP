<?xml version="1.0" encoding="utf-8"?>

<mule xmlns="http://www.mulesource.org/schema/mule/core/2.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:spring="http://www.springframework.org/schema/beans"
	xmlns:sftp="http://www.mulesource.org/schema/mule/sftp/2.0"
	xmlns:vm="http://www.mulesource.org/schema/mule/vm/2.0"
	xsi:schemaLocation="
               http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
               http://www.mulesource.org/schema/mule/core/2.0 http://www.mulesource.org/schema/mule/core/2.0/mule.xsd
               http://www.mulesource.org/schema/mule/sftp/2.0 http://www.mulesource.org/schema/mule/sftp/2.0/mule-sftp.xsd
               http://www.mulesource.org/schema/mule/vm/2.0 http://www.mulesource.org/schema/mule/vm/2.0/mule-vm.xsd">

	<sftp:connector name="sftp" pollingFrequency="15000" >
		<custom-exception-strategy
			class="org.mule.tck.functional.QuietExceptionStrategy" />
	</sftp:connector>

    <vm:connector name="VMQueue" queueEvents="true">
        <vm:queueProfile persistent="true" maxOutstandingMessages="10"/>
    </vm:connector>

	<model name="send">
		<service name="sending">
			<inbound>
				<vm:inbound-endpoint path="test.upload" />
			</inbound>
			<outbound>
				<outbound-pass-through-router>
				<sftp:outbound-endpoint
					address="sftp://mule:muleforge@ms/data" outputPattern="${DATE}.dat"/>					
				</outbound-pass-through-router>
			</outbound>
		</service>
	</model>

	<model name="receive">
		<service name="receiving">
			<inbound>
				<sftp:inbound-endpoint
					address="sftp://mule:muleforge@ms/data"/>
			</inbound>
			<outbound>
				<outbound-pass-through-router>
					<vm:outbound-endpoint path="test.download" />					
				</outbound-pass-through-router>
			</outbound>
		</service>
	</model>
	
</mule>



